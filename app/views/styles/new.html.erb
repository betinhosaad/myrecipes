<%= render 'shared/page_title', title: "Create a Style" %>

<%= render 'shared/errors', obj: @style %>

<div class = "row">
  <div class = "well col-md-6 col-md-offset-3">
    <%= form_for @style do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
        <%= f.submit @style.new_record? ? 'Create Style' : 'Edit Style', class: "btn btn-success" %>
    <% end %>
  </div>
</div>
